<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_8"
    android:backgroundTint="@color/white"
    android:paddingHorizontal="16dp"
    android:paddingTop="32dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_content"
        style="@style/ibm_plex_t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="저장이 완료되었습니다!"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_move_home"
        style="@style/ibm_plex_h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_radius_8"
        android:backgroundTint="@color/gray_e1"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="홈 화면으로 가기"
        android:textColor="@color/gray_66"
        app:layout_constraintBottom_toTopOf="@id/btn_move_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_move_news"
        style="@style/ibm_plex_h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_8"
        android:backgroundTint="@color/primary"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="뉴스 만들러 가기"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_move_home" />

</androidx.constraintlayout.widget.ConstraintLayout>