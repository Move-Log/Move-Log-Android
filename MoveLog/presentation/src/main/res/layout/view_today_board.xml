<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <TextView
        android:id="@+id/tv_hour_1"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_hour_2"
        android:gravity="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="4dp"

        android:background="@color/gray_e1"
        tools:text="2"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_hour_2"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_hour_1"
        app:layout_constraintEnd_toStartOf="@id/tv_minute_1"
        android:gravity="center"
        android:layout_marginEnd="16dp"

        android:background="@color/gray_e1"
        tools:text="3"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_minute_1"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_hour_2"
        app:layout_constraintEnd_toStartOf="@id/tv_minute_2"
        android:gravity="center"
        android:layout_marginEnd="4dp"

        android:background="@color/gray_e1"
        tools:text="5"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_minute_2"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_minute_1"
        app:layout_constraintEnd_toStartOf="@id/tv_second_1"
        android:gravity="center"
        android:layout_marginEnd="16dp"

        android:background="@color/gray_e1"
        tools:text="5"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_second_1"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_minute_2"
        app:layout_constraintEnd_toStartOf="@id/tv_second_2"
        android:gravity="center"
        android:layout_marginEnd="4dp"

        android:background="@color/gray_e1"
        tools:text="1"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_second_2"
        android:layout_width="36dp"
        android:layout_height="44dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_second_1"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"

        android:background="@color/gray_e1"
        tools:text="0"
        style="@style/ibm_plex_t3"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/tv_hour_1"
        app:layout_constraintEnd_toEndOf="@id/tv_hour_2"
        app:layout_constraintTop_toBottomOf="@id/tv_hour_1"
        android:layout_marginTop="4dp"

        android:text="@string/time_hour"
        style="@style/ibm_plex_l2"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/tv_minute_1"
        app:layout_constraintEnd_toEndOf="@id/tv_minute_2"
        app:layout_constraintTop_toBottomOf="@id/tv_minute_1"
        android:layout_marginTop="4dp"

        android:text="@string/time_minute"
        style="@style/ibm_plex_l2"
        android:textColor="@color/primary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/tv_second_1"
        app:layout_constraintEnd_toEndOf="@id/tv_second_2"
        app:layout_constraintTop_toBottomOf="@id/tv_second_1"
        android:layout_marginTop="4dp"

        android:text="@string/time_second"
        style="@style/ibm_plex_l2"
        android:textColor="@color/primary"/>

</androidx.constraintlayout.widget.ConstraintLayout>