<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ilgusu.presentation.view.home.HomeFragment"
        android:label="HomeFragment"
        app:route="home">
        <action
            android:id="@+id/action_home_to_sign_in"
            app:destination="@id/signInFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ilgusu.presentation.view.signIn.SignInFragment"
        android:label="SignInFragment"
        app:route="sign_in">
        <action
            android:id="@+id/action_sign_in_to_home"
            app:destination="@id/home" />
        <action
            android:id="@+id/action_sign_in_to_termsFragment"
            app:destination="@id/termsFragment" />
    </fragment>
    <fragment
        android:id="@+id/termsFragment"
        android:name="com.ilgusu.presentation.view.term.TermsFragment"
        android:label="TermsFragment"
        app:route="terms">
        <action
            android:id="@+id/action_termsFragment_to_home"
            app:destination="@id/home" />
    </fragment>
</navigation>